code_mode:
  defaults:
    call_template_type: mcp
  servers:
    eventkit:
      url: http://host.docker.internal:7411/eventkit/rpc
      headers:
        Authorization: "Bearer REPLACE_ME"
      auth: null
    filesystem:
      command: npx
      args: [-y, "@modelcontextprotocol/server-filesystem", "/Users/yourname"]
    git:
      command: npx
      args: [-y, "@modelcontextprotocol/server-git", "/Users/yourname/repo/brain"]
    github:
      command: /usr/local/bin/github-mcp-server
      args: [stdio]
      env:
        GITHUB_PERSONAL_ACCESS_TOKEN: set-me
