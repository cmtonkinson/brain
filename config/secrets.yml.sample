# Brain secrets configuration sample
# Copy to ~/.config/brain/secrets.yml and set your values
# File should have permissions 0600 (readable only by owner)
#
# All fields shown here have NO defaults - you must set them
# Can also be set via environment variables (see comments below)

################################################################################
# REQUIRED SECRETS
################################################################################

# Obsidian REST API authentication (REQUIRED)
# obsidian:
#   api_key: "your-obsidian-local-rest-api-token"
# Env var: OBSIDIAN_API_KEY

# Signal message filtering (REQUIRED - at least one number)
# signal:
#   allowed_senders_by_channel:
#     signal:
#       - "+15551234567"
#       - "+15559876543"
# Env var: ALLOWED_SENDERS_BY_CHANNEL (JSON format)

################################################################################
# OPTIONAL SECRETS
################################################################################

# Anthropic API key for Claude
# anthropic_api_key: "sk-ant-api03-..."
# Env var: ANTHROPIC_API_KEY

# PostgreSQL database password
# database:
#   postgres_password: "your-secure-password"
# Env var: POSTGRES_PASSWORD
# Note: If set, database.url will be auto-generated

# Letta service authentication
# letta:
#   server_password: "your-letta-password"
# Env var: LETTA_SERVER_PASSWORD
# Note: letta.api_key will be auto-derived from this if not set

# Signal phone number for outbound messages
# signal:
#   phone_number: "+15551234567"
# Env var: SIGNAL_PHONE_NUMBER

################################################################################
# ENVIRONMENT VARIABLE EXAMPLE
################################################################################
# Instead of this file, you can set secrets via environment:
#
#   export ANTHROPIC_API_KEY="sk-ant-..."
#   export OBSIDIAN_API_KEY="your-token"
#   export POSTGRES_PASSWORD="your-password"
#   export LETTA_SERVER_PASSWORD="your-letta-password"
#   export SIGNAL_PHONE_NUMBER="+15551234567"
#   export ALLOWED_SENDERS_BY_CHANNEL='{"signal": ["+15551234567"]}'
#
# Environment variables have highest precedence.
