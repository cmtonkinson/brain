# Brain configuration defaults (non-secret).
# Override in ~/.config/brain/brain.yml or /config/brain.yml.

log_level: "INFO"
log_level_otel: "INFO"

obsidian:
  url: "http://host.docker.internal:27123"

llm:
  model: "anthropic:claude-sonnet-4-20250514"
  base_url: null
  timeout: 600
  embed_model: "mxbai-embed-large"
  embed_base_url: "http://host.docker.internal:11434"

signal:
  url: "http://signal-api:8080"

letta:
  agent_name: "brain"
  model: "ollama/llama3.1:8b"
  embed_model: "ollama/mxbai-embed-large:latest"
  bootstrap_on_start: false

conversation:
  folder: "Brain/Conversations"
  default_channel: "signal"
  summary_every_turns: 7

utcp:
  config_path: "~/.config/brain/utcp.json"
  code_mode_timeout: 30

indexer:
  interval_seconds: 0
  chunk_tokens: 1000
  collection: "obsidian"

scheduler:
  default_max_attempts: 3
  default_backoff_strategy: "exponential"
  backoff_base_seconds: 60

commitments:
  autonomous_transition_confidence_threshold: 0.8

qdrant:
  url: "http://qdrant:6333"
redis:
  url: "redis://redis:6379"
user:
  name: "user"
  home_dir: "/Users/you"
  timezone: "America/New_York"
  test_calendar_name: null
  test_reminder_list_name: null

# Required (set in ~/.config/brain/brain.yml or ~/.config/brain/secrets.yml):
