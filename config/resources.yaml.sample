substrate:
  filesystem:
    root_dir: ./var/blobs
    temp_prefix: blobtmp
    fsync_writes: true
    default_extension: blob
  obsidian:
    base_url: http://host.docker.internal:27123
    api_key: ""
    timeout_seconds: 10.0
    max_retries: 2
  postgres:
    url: postgresql+psycopg://brain:brain@postgres:5432/brain
    pool_size: 5
    max_overflow: 10
    pool_timeout_seconds: 30.0
    pool_pre_ping: true
    connect_timeout_seconds: 10.0
    health_timeout_seconds: 1.0
    sslmode: prefer
  qdrant:
    url: http://qdrant:6333
    request_timeout_seconds: 10.0
    distance_metric: cosine
  redis:
    url: redis://redis:6379/0
    host: redis
    port: 6379
    db: 0
    username: ""
    password: ""
    password_env: ""
    ssl: false
    connect_timeout_seconds: 5.0
    socket_timeout_seconds: 5.0
    health_timeout_seconds: 1.0
    max_connections: 20

adapter:
  litellm:
    timeout_seconds: 30.0
    max_retries: 2
    providers:
      ollama:
        api_base: http://host.docker.internal:11434
      openai:
        api_key_env: OPENAI_API_KEY
  signal:
    base_url: http://signal-api:8080
    health_timeout_seconds: 1.0
    timeout_seconds: 10.0
    max_retries: 2
    poll_interval_seconds: 1.0
    poll_receive_timeout_seconds: 5
    poll_max_messages: 10
    failure_backoff_initial_seconds: 1.0
    failure_backoff_max_seconds: 30.0
    failure_backoff_multiplier: 2.0
    failure_backoff_jitter_ratio: 0.2
  utcp_code_mode:
    code_mode:
      defaults:
        call_template_type: mcp
      servers:
        filesystem:
          command: npx
          args: [-y, "@modelcontextprotocol/server-filesystem", /tmp]
